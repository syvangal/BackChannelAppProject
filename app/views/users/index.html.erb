<h1>Listing users</h1>

<table border="1">
  <tr>
    <th>Username</th>
    <th>Unityid</th>
    <th>Emailaddress</th>
    <th>Role</th>
    <th>Links</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.userName %></td>
    <td><%= user.unityId %></td>
    <td><%= user.emailAddress %></td>
    <td><%= user.role %></td>

    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

